<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- CSS -->
  <link rel="stylesheet" href="/styles/styles.css">
  <!-- External JS Files -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
    integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <!-- JS File -->
  <script src="scripts/app.js"></script>
  <title>Conversations</title>
</head>

<body>
  <header class="header">

    <h1 class="logo">ZWW</h1>

    <nav>
      <div class="dropdown">
        <button class="dropbtn">Sort Price</button>
        <div class="dropdown-content">
          <ul>
            <li><a href="/desc">Most $</a></li>
            <li><a href="/asc">Least $</a></li>
          </ul>
        </div>
      </div>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/favorites">Favorites</a></li>
        <li><a href="/conversations">Messages</a></li>
      </ul>
    </nav>

  </header>

  <div class="flex-convo-container">
    <h1>All Conversations</h1>

    <% for (data of rows) { %>
      <div class="all-messages-container">
        <h3 class="item--name">
          To: <%= data.to %>
        </h3>

        <h3>
          From: <%= data.from %>
        </h3>

        <a class="light-btn reply-btn" href="/messages/<%= data.convo_id %>">
          Reply
        </a>
      </div>
      <% } %>
  </div>

</body>

</html>
