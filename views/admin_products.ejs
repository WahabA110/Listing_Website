<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- CSS File -->
  <link rel="stylesheet" href="/styles/styles.css" type="text/css" />
  <title>Your Store</title>
</head>

<body>

  <header class="header">
    <h1 class="title">Your Store</h1>

    <a href="/">Home</a>

  </header>
  <div class="flex-wrapper">
    <div class="container">
      <% for (item of products) { %>

        <div class="item-wrapper">
          <h2>
            <%= item.name %>
          </h2>

          <div class="img-container">
            <img class="item--img" src=" <%= item.thumbnail_photo %> ">
          </div>

          <span class="item--price">
            $<%= item.price %>
          </span>

          <p class="item--desc">
            <%= item.description %>
          </p>

          <div class="btn-container">
            <form method="POST" action="/admin/products/<%= item.id %>">
              <button class="light-btn" type="submit">Sold</button>
            </form>

            <form method="POST" action="/admin/products/<%= item.id %>">
              <button class="red-btn" type="submit">Delete</button>
            </form>
          </div>

        </div>

        <% } %>
    </div>
  </div>

</body>

</html>
