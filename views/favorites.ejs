<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="styles/styles.css">
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script src="/scripts/app.js"></script>
  <title>Your Favorites</title>
</head>

<body>

  <header class="header">

    <h1 class="logo">ZWW</h1>

    <nav>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/favorites">Favorites</a></li>
        <li><a href="/conversations">Messages</a></li>
      </ul>
    </nav>

  </header>

  <div class="outer-container">

    <h2 class="title">Your Favorites</h2>
    <% for (item of products) { %>



      <div class="fav-container">
        <div class="img-container">

          <img class="item--img" src=" <%= item.thumbnail_photo %> ">

        </div>

        <div class="desc-container">
          <h3 class="item--title">
            <%= item.name %>
          </h3>
          <span class="item--price">
            $<%= item.price %>
          </span>
          <p class="item--desc">
            <%= item.description %>
          </p>

          <div class="btn-container">


            <form method="POST" action="/conversations/<%= item.id %>">
              <button id="seller-btn" class="border-btn" type="submit">Message Seller</button>
            </form>

            <form action="/favorites/delete/<%= item.id %>" method="post">
              <button class="red-btn" type="submit">Remove Item</button>
            </form>

          </div>
        </div>
      </div>


      <% } %>
  </div>
</body>

</html>
